{
  "name": "little-sentinel",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@capacitor/core": "2.4.2",
    "@ionic/react": "^5.0.7",
    "@ionic/react-router": "^5.0.7",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^8.0.3",
    "@types/axios": "^0.14.0",
    "@types/jest": "^24.0.25",
    "@types/node": "^12.12.24",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.9",
    "@types/react-router": "^5.1.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/redux": "^3.6.0",
    "@types/styled-components": "^5.1.4",
    "axios": "^0.21.0",
    "ionicons": "^5.0.0",
    "lodash": "^4.17.20",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-maskinput": "^3.2.0",
    "react-redux": "^7.2.1",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "styled-components": "^5.2.0",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "tsc && yarn lint"
    }
  },
  "scripts": {
    "bootstrap": "yarn run update:shared-deps && react-scripts start",
    "start": "react-scripts start",
    "update:shared-deps": "yarn upgrade --scope @little-sentinel --latest",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint . --fix --ext .ts,.tsx"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "semi": "warn",
      "no-unused-vars": "warn",
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "interface",
          "format": [
            "PascalCase"
          ],
          "custom": {
            "regex": "^I[A-Z]",
            "match": true
          }
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@capacitor/cli": "2.4.2",
    "@project-boilerplate/shared": "^1.0.2",
    "@types/lodash": "^4.14.165",
    "font-awesome": "^4.7.0",
    "husky": "^4.3.0",
    "redux-persist": "^6.0.0"
  },
  "description": "An Ionic project"
}
